[Unit]
Description=PlexDrive Service
After=multi-user.target

[Service]
Type=simple
ExecStart=/usr/bin/plexdrive mount --uid=1000 --gid=1000 -o allow_other,allow_non_empty_mount -v 2 --refresh-interval=1m --config=/root/.plexdrive /mnt/plexdrive
ExecStop=/bin/fusermount -u /mnt/plexdrive
TimeoutStopSec=20
KillMode=process
RemainAfterExit=yes

[Install]
WantedBy=multi-user.target
