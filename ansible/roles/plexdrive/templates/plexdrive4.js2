[Unit]
Description=PlexDrive4 Service
After=network-online.target

[Service]
Type=simple
ExecStart=/usr/bin/plexdrive4 --uid=1000 --gid=1000 -o allow_other,allow_non_empty_mount -v 2 --refresh-interval=1m --config=/root/.plexdrive /mnt/plexdrive
ExecStop=/bin/fusermount -uz /mnt/plexdrive
TimeoutStopSec=20
KillMode=process
RemainAfterExit=yes

[Install]
WantedBy=multi-user.target