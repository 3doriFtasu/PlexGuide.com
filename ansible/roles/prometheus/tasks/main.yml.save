---
- include_role:
    name: variables
    
- name: Remove Prometheus Container
  docker_container:
    name: prometheus
    state: absent

- name: Create Prometheus Appdata Directory
  file: "path=/opt/appdata/prometheus/ state=directory mode=0775 owner=1000 group=1000 recurse=true"

- name: Copy Prometheus Config
  copy:
    src: /opt/plexguide/ansible/roles/prometheus/tasks/prometheus.yml
    dest: /opt/appdata/prometheus/prometheus.yml
    force: yes

- name: Deploy Prometheus Container
  docker_container:
    name: prometheus
    image: "prom/prometheus:latest"
    pull: yes
    cpu_shares: 256
    published_ports:
     # - "{{ports.stdout}}9090:9090"
    volumes:
      - "/opt/appdata/prometheus/:/etc/prometheus"
      - "/opt/appdata/prometheus/data/:/prometheus"
    command:
      - '--config.file=/etc/prometheus/prometheus.yml'
      - '--storage.tsdb.path=/prometheus'
     # - '--web.console.libraries=/usr/share/prometheus/console_libraries'
     # - '--web.console.templates=/usr/share/prometheus/consoles'

    env:
      PUID: 1000
      PGID: 1000
    networks:
      - name: plexguide
        aliases:
          - prometheus
    restart_policy: always
    labels:
      traefik.enable: "true"
      traefik.frontend.redirect.entryPoint: "https"
      traefik.frontend.rule: "Host:prometheus.{{domain.stdout}}"
      traefik.port: "9090"
