################# INSTALL SONARR ################# START
## Source: https://github.com/JonnyWong16/plexpy/wiki/Installation
sudo apt-get install git-core
cd /opt
git clone https://github.com/JonnyWong16/plexpy.git
cd plexpy
python PlexPy.py

sudo nano /etc/systemd/system/plexpy.service

#### START COPY #####

[Unit]
Description=PlexDrive Service
After=multi-user.target

[Service]
Type=simple
User=root
Group=root
ExecStart=/opt/plexpy/PlexPy.py --quiet --daemon --nolaunch --config /opt/plexpy/config.ini --datadir /opt/plexpy
TimeoutStopSec=20
KillMode=process
Restart=always

[Install]
WantedBy=multi-user.target

##### END COPY #####

sudo systemctl daemon-reload
sudo systemctl enable plexpy.service
sudo systemctl start plexpy.service
sudo systemctl status plexpy.service
