drives_rclone_builder_token_var () {

accesstoken=$(cat /pg/var/drives/$1/token.info | grep access_token | awk '{print $2}')
refreshtoken=$(cat /pg/var/drives/$1/token.info| grep refresh_token | awk '{print $2}')
rcdate=$(date +'%Y-%m-%d')
rctime=$(date +"%H:%M:%S" --date="$givenDate 60 minutes")
rczone=$(date +"%:z")
final=$(echo "${rcdate}T${rctime}${rczone}")
echo $rctime >> /pg/vars/drives/rc.temp
}
