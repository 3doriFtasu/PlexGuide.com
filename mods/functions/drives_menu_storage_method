drives_menu_storage_method() {

drives_menu_start_setup

common_message "ðŸš€  Drives - Storage Method" "
ðŸ’¬  Further Explanation? Visit ~ http://drives.plexguide.com
------------------------------------------------------------------------------
[1] Drives Basic   | Novice  - Daily Cap 750GB - Google Drive Upload Only
[2] Drives PGBlitz | Complex - Daily Cap None  - Shared Drive Upload Only
[3] Drives Local   | Simple  - No Data Upload  - Data Stays Local
------------------------------------------------------------------------------
[Z] Exit Interface
"
common_number

case $typed in
    1 ) echo "Basic" > /pg/var/drives/storage.method && drives_menu_start && exit ;;
    2 ) echo "PGBlitz" > /pg/var/drives/storage.method && drives_menu_start && exit ;;
    3 ) echo "Local" > /pg/var/drives/storage.method && drives_menu_start && exit ;;
    z ) drives_menu_start && exit ;;
    Z ) drives_menu_start && exit ;;
    * ) drives_menu_storage_method && exit ;;
esac

}
