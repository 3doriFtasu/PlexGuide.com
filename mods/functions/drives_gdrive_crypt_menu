gdrives_gdrive_crypt_menu () {

drives_menu_start_setup

common_message "ðŸš€  GDrive - Encryption Selection Interface" "
ðŸ’¬  Further Explanation? Visit ~ http://drives.plexguide.com
------------------------------------------------------------------------------
[N] No
[Y] Yes
------------------------------------------------------------------------------
[Z] Exit Interface
"
common_number

case $typed in
    Y ) echo "YES" >> /pg/var/drives/gd/gd.crypt && drives_gdrive_menu && exit ;;
    y ) echo "YES" >> /pg/var/drives/gd/gd.crypt && drives_gdrive_menu && exit ;;
    N ) echo "NO" >> /pg/var/drives/gd/gd.crypt && drives_gdrive_menu && exit ;;
    n ) echo "NO" >> /pg/var/drives/gd/gd.crypt && drives_gdrive_menu && exit ;;
    z ) drives_gdrive_menu && exit ;;
    Z ) drives_gdrive_menu && exit ;;
    * ) drives_gdrive_crypt_menu && exit ;;
esac

}
