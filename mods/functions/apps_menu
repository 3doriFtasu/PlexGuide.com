case $typed in
    1 ) ls -p /pg/mods/containers/primary/ | grep -v / > "/pg/tmp/list.tmp" && apps_interface ;;
    2 ) ls -p /pg/mods/containers/community/ | grep -v / > "/pg/tmp/list.tmp" && apps_interface ;;
    z ) start_menu ;;
    Z ) start_menu ;;
    * ) apps_menu ;;
esac

