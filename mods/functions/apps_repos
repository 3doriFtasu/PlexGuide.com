#!/bin/bash
############# https://github.com/plexguide/PlexGuide.com/graphs/contributors ###
apps_repos() {
a=a
}

repos_part1 () {
apps_interface_start
common_message "üöÄ  Default App Repos" "üí¨ More Info? Visit ~ plexguide.com/wiki/app-repos

[1] Personal - $personal1/$personal2 ($personal3)
[Z] Exit"

common_number

case $typed in
    1 ) repos_part2 && apps_menu && exit ;;
    z ) apps_menu && exit ;;
    Z ) apps_menu && exit ;;
    * ) repos_part1 && exit ;;
esac

}

repos_part2 () {

repo1=$(cat /pg/var/repos/repo.personal1)
repo2=$(cat /pg/var/repos/repo.personal2)
repo3=$(cat /pg/var/repos/repo.personal3)

common_message "üöÄ  Change Default App Repos" "üí¨ Current Repo: $repo1/$repo2 ($repo3)

Change the Following Repo? [Y/N] or [Z] Exit"

common_number

case $typed in
    y ) repos_part3 && exit ;;
    Y ) repos_part3 && exit ;;
    n ) repos_part2 && exit ;;
    N ) repos_part2 && exit ;;
    z ) apps_menu && exit ;;
    Z ) apps_menu && exit ;;
    * ) repos_part2 && exit ;;
esac
}

repos_part3 () {
common_message "üöÄ  Repo Information" "TIP: Fork the personal repo via github.com/plexguide/$repo2.

What is your GITHUB username?"
common_number
repos_part4
}

repos_part4 () {

abc=$typed
common_message "üöÄ  Default App Repos" "üí¨  Repo Change Correct? >>> $abc/personal

[Y/N] or [Z] Exit"

common_number
case $typed in
    y ) a=a ;;
    Y ) a=a ;;
    n ) repos_part3 && exit ;;
    N ) repos_part3 && exit ;;
    z ) apps_menu && exit ;;
    Z ) apps_menu && exit ;;
    * ) repos_part4 && exit ;;
esac

echo $abc > /pg/var/repos/repo.personal1

common_header "üí¨ $abc/personal is now set as the personal repo!"
common_confirm

repos_part5
}

repos_part5 () {
common_message "üöÄ  Branch Info" "üí¨ Change the Branch Version? Branch: $repo3

[Y/N] or [Z] Exit"

common_number
case $typed in
    y ) repos_part6 ;;
    Y ) repos_part6 ;;
    n ) repos_check1 && exit ;;
    N ) repos_check1 && exit ;;
    z ) repos_part5 && exit ;;
    Z ) repos_part5 && exit ;;
    * ) repos_part5 && exit ;;
esac

}

repos_part6 () {
common_message "üöÄ  Repo Information" "TIP: Find your branch via github.com/$repo1/$repo2

What is the Branch Version?"
common_number
repos_part7
}

repos_part7 () {

abcd=$typed
common_message "üöÄ  Default Branch" "üí¨  Branch Change Correct? >>> $abcd

[Y/N] or [Z] Exit"

common_number
case $typed in
    y ) a=a ;;
    Y ) a=a ;;
    n ) repos_part6 && exit ;;
    N ) repos_part6 && exit ;;
    z ) apps_menu && exit ;;
    Z ) apps_menu && exit ;;
    * ) repos_part7 && exit ;;
esac

echo $abcd > /pg/var/repos/repo.personal3

common_header "üí¨ $abcd is the branch for $repo1/$repo2"
common_confirm

repos_check1
exit
}

repos_check1 () {

echo FLAG 0
exist_check=$(curl https://github.com/${repos_1}/${repos_2}/tree/${repos_3} | grep "Page not found")
echo FLAG 1
if [[ "$exist_check" == "" ]]; then
rm -rf /pg/tmp/install2
common_fcreate_silent /pg/tmp/install2
git clone -b ${repos_3} --single-branch https://github.com/${repo1}/${repo2}.git /pg/tmp/install2

common_message "üí¨ VALID!" "URL: https://github.com/${repos_1}/${repos_2}/tree/${repos_3}

This REPO/BRANCH is valid!"
else
common_message "‚õîÔ∏è WARNING! DOES NOT EXIST" "URL: https://github.com/${repos_1}/${repos_2}/tree/${repos_3}

This REPO/BRANCH does not exist! Please check and ensure that your values are
valid! No change have been made."
fi

common_confirm
repos_part1
}
