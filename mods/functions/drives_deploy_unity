drives_deploy_unity() {

drives_menu_start_setup

service_path="/etc/systemd/system/unity.service"

if [[ -e "$service_path" ]]; then
common_header "ðŸ’¾  NOTICE:  Stopping/Disabling OLD Unity Service - $1"; sleep 1
systemctl daemon-reload && systemctl stop unity && systemctl disable unity && rm -rf "$service_path"; fi

cat <<- EOF > "$service_path"

[Unit]
Description=PlexGuide_Unity
After=multi-user.target

[Service]
Type=simple
User=0
Group=0
ExecStart=/bin/bash /pg/var/drives/unity.sh
ExecStop=/bin/fusermount -uzq /pg/unity
TimeoutStopSec=60
KillMode=process
RemainAfterExit=yes

ExecStop=/bin/fusermount -uz /pg/unity > /dev/null
TimeoutSec=60
User=0
Group=0
Restart=on-abort
RestartSec=5
StartLimitInterval=60s
StartLimitBurst=3


[Install]
WantedBy=multi-user.target
EOF

fusermount -u -q /pg/unity
common_fcreate /pg/unity
common_header "ðŸ’¾  NOTICE:  Starting/Enabling NEW Service - Unity" && sleep 1
systemctl daemon-reload && systemctl enable unity | fmt -w 79 && systemctl restart unity

common_header "ðŸ’¾  ENABLED:  MergerFS Drive ~ /pg/unity deployed!" && sleep 1.5
}
