################# Starting Notes ################# START
# The location of this YML file: /opt/
# Note, you can copy this entire file and you will be ok.
# 1st Time - Type: nano /opt/docker-compose.yml (then copy this entire file into it)
#     Execute YML Script: cd /opt && sudo docker-compose -f docker-compose.yml up -d
# Future Edits:  cd /opt && sudo rm -r docker-compose.yml && sudo nano docker-compose.yml (then copy this entire file into it)
#     Execute YML Script: cd /opt && sudo docker-compose -f docker-compose.yml up -d    
# The spacing below in this script is important / it will fail
################# Starting Notes ################# END

################# YML Writeup ################# Start
---
version: '2'
services:
 portainer:
   image: portainer/portainer
   container_name: portainer
   command: --templates http://templates/templates.json
   volumes:
     - /opt/appdata/portainer:/data
     - /var/run/docker.sock:/var/run/docker.sock
   ports:
     - 9000:9000
# ensures this container starts up when required to
   restart:
     always
 plexpy:
   image: linuxserver/plexpy
   container_name: plexpy
   depends_on:
     - plex
   volumes:
     - /opt/appdata/plexpy:/config
     - /opt/appdata/plex/Library/Application\ Support/Plex\ Media\
   ports:
     - 8181:8181
   links:
     - plex
# ensures this container starts up when required to
   restart: always
   environment:
     - PUID=1001    
     - PGID=1001   
 muximux:
   image:  linuxserver/muximux
   container_name: muximux
# If you want your ip or domain to load this directly, change the 8005 to 80 (80:80).
# If you plan on creating a web-interface; leave as 8005; port 80 is reserved for your website
   ports:
     - 8015:8015
   volumes:
     - /opt/appdata/muximux/config:/config
     - /etc/localtime:/etc/localtime:ro
   environment:
     - PUID=1001
     - PGID=1001
   restart:
     always
################# YML Writeup ################# END
 
################# Final Notes ################# Start
# The location of this YML file: /opt/
# Note, you can copy this entire file and you will be ok.
# 1st Time - Type: nano /opt/docker-compose.yml (then copy this entire file into it)
#     Execute YML Script: cd /opt && sudo docker-compose -f docker-compose.yml up -d
# Future Edits:  cd /opt && sudo rm -r docker-compose.yml && sudo nano docker-compose.yml (then copy this entire file into it)
#     Execute YML Script: cd /opt && sudo docker-compose -f docker-compose.yml up -d    
################# Final Notes ################# END
